<resources>
    <style name="Theme.App.DayNight" parent="Theme.App" />
    <style name="Theme.App.ActionBar.DayNight" parent="Theme.App.ActionBar" />

    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/primary_dark_gold</item>
        <item name="android:textColorPrimary">@color/primary_dark_gold</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorAccent">?colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorSecondary">@color/primary_dark_gold</item>

        <!-- Background color. -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:colorBackgroundFloating">@color/white</item>
        <item name="colorOnBackground">@color/primary_dark_gold</item>

        <!-- Surface color. -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorDarkSurface">@color/primary_gold</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Widgets color. -->
        <item name="actionBarStyle">@style/Widget.App.ActionBar</item>
        <item name="textAppearanceHeadline6">@style/Widget.App.ActionBar.Title</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.App.Snackbar.TextView</item>

        <item name="inkStrokeBackgroundColor">@color/light_gold</item>
        <item name="inkStrokeOptionsBackgroundColor">@color/light_gold_variant</item>

        <item name="dialogNegativeBackgroundColor">@color/light_gold</item>
    </style>

    <style name="Theme.App.Transparent" parent="Theme.App.DayNight">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Needed for external OssLicensesMenuActivity and OssLicensesActivity -->
    <style name="Theme.App.ActionBar" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/primary_dark_gold</item>
        <item name="android:textColorPrimary">@color/primary_dark_gold</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorAccent">?colorPrimary</item>
        <item name="colorOnSecondary">@color/primary_dark_gold</item>
        <item name="android:textColorSecondary">@color/primary_dark_gold</item>

        <!-- Background color. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:colorBackgroundFloating">@color/white</item>
        <item name="colorOnBackground">@color/primary_dark_gold</item>

        <!-- Surface color. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/primary_dark_gold</item>

        <!-- Widgets color. -->
        <item name="actionBarStyle">@style/Widget.App.ActionBar</item>
    </style>

    <style name="Widget.App.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">?android:attr/colorBackground</item>
        <item name="titleTextAppearance">@style/Widget.App.ActionBar.Title</item>
    </style>

    <style name="Widget.App.ActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@drawable/bottom_navigation_top_border</item>
        <item name="itemIconTint">@color/bottom_nav_icon_tint</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="backgroundOverlayColorAlpha">1.0</item>
    </style>

    <style name="Widget.App.Snackbar.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:alpha">1.0</item>
        <item name="android:textColor">?attr/colorBackgroundFloating</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorOnSurface">?colorOnBackground</item>
    </style>
</resources>