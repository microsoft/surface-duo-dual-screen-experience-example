<resources>

    <style name="App.Name" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_40</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:fontFamily">@font/dmsans_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="Launch.Button" parent="Customize.Button">
        <item name="android:paddingStart">@dimen/xl_padding</item>
        <item name="android:paddingEnd">@dimen/xl_padding</item>
        <item name="android:paddingTop">@dimen/half_medium_padding</item>
        <item name="android:paddingBottom">@dimen/half_medium_padding</item>
        <item name="android:text">@string/launch_button</item>
    </style>

    <style name="Customize.Button" parent="Store.Button">
        <item name="android:paddingStart">@dimen/normal_padding</item>
        <item name="android:paddingEnd">@dimen/normal_padding</item>
        <item name="android:paddingTop">@dimen/half_medium_padding</item>
        <item name="android:paddingBottom">@dimen/half_medium_padding</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="TutorialText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MarkerText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="GoldText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/dmsans_regular</item>
    </style>

    <style name="Store.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Store.Name" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:fontFamily">@font/dmsans_bold</item>
    </style>

    <style name="Store.Address" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:fontFamily">@font/dmsans_regular</item>
    </style>

    <style name="Store.Rating" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:fontFamily">@font/dmsans_regular</item>
    </style>

    <style name="Store.Button" parent="TextAppearance.AppCompat.Title">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">@dimen/normal_padding</item>
        <item name="android:paddingEnd">@dimen/normal_padding</item>
        <item name="android:paddingTop">@dimen/micro_padding</item>
        <item name="android:paddingBottom">@dimen/micro_padding</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/dmsans_bold</item>
        <item name="android:background">@drawable/rounded_rectangle_button</item>
    </style>

    <style name="Order.Button" parent="Store.Button">
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="App.TabText" parent="Widget.AppCompat.ActionBar.TabText">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/dmsans_regular</item>
    </style>

    <style name="Store.TabText" parent="App.TabText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Paragraph.Text" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Paragraph.Gold.Text" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="AddButton" parent="Store.Button">
        <item name="android:paddingStart">@dimen/regular_padding</item>
        <item name="android:paddingEnd">@dimen/regular_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:background">@drawable/rectangle_button</item>
        <item name="android:text">@string/order_recommendations_button</item>
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="License.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/license_gray</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="License.Subtitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/license_gray</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Catalog.Description" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:fontFamily">@font/dmsans_regular</item>
    </style>

    <style name="NoInternet" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:fontFamily">@font/dmsans_bold</item>
    </style>
</resources>