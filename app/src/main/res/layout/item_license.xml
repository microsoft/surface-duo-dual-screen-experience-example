<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.microsoft.device.samples.dualscreenexperience.domain.about.model.License" />

        <variable
            name="item"
            type="com.microsoft.device.samples.dualscreenexperience.domain.about.model.License" />

        <variable
            name="itemClickListener"
            type="com.microsoft.device.samples.dualscreenexperience.presentation.util.ItemClickListener&lt;License&gt;" />
    </data>

    <TextView
        style="@style/License.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:onClick="@{() -> itemClickListener.onClick(item)}"
        android:paddingTop="@{item.url != null ? @dimen/half_medium_padding : @dimen/micro_padding}"
        android:paddingBottom="@{item.url != null ? @dimen/half_medium_padding : @dimen/micro_padding}"
        android:text="@{item.title}"
        android:textColor="@{item.url != null ? @color/white : @color/license_gray}"
        tools:text="Kotlin"/>

</layout>
