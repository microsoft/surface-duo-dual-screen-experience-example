<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.catalog.CatalogListFragment">

    <data>
        <variable
            name="isDualLandscape"
            type="Boolean" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:clickable="true"
        android:focusable="true">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            visibleIf="@{!isDualLandscape}"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.microsoft.device.samples.dualscreenexperience.presentation.util.VerticalViewPager
            android:id="@+id/vertical_pager"
            visibleIf="@{isDualLandscape}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

</layout>