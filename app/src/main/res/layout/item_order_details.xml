<layout>

    <data>
        <import type="androidx.core.view.ViewKt" />

        <variable
            name="viewModel"
            type="com.microsoft.device.display.sampleheroapp.presentation.order.OrderViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/large_padding"
        android:paddingEnd="@dimen/large_padding"
        tools:background="@color/gray">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/total_title"
            style="@style/Store.Name"
            visibleIf="@{!viewModel.submittedOrder.isSubmitted}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:text="@{@string/order_total_title(viewModel.getCount(viewModel.itemList))}"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintBottom_toTopOf="@id/total_price"
            app:layout_constraintStart_toStartOf="@id/total_price"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Total 8 items"
            tools:visibility="visible"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/total_price"
            style="@style/Store.Name"
            price="@{viewModel.getTotalPrice(viewModel.itemList)}"
            visibleIf="@{!viewModel.submittedOrder.isSubmitted}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintEnd_toStartOf="@id/submit_button"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_title"
            tools:text="$30,447"
            tools:visibility="visible"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_button"
            style="@style/Store.Button"
            visibleIf="@{!viewModel.submittedOrder.isSubmitted}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(v) -> ViewKt.isVisible(v) ? viewModel.submitOrder() : void}"
            android:text="@string/order_submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/total_price"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/order_date"
            style="@style/Store.Name"
            orderDate="@{viewModel.submittedOrder.orderTimestamp}"
            visibleIf="@{viewModel.submittedOrder.isSubmitted}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintEnd_toStartOf="@id/order_id"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Order Date: 02/21"
            tools:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/order_id"
            style="@style/GoldText"
            visibleIf="@{viewModel.submittedOrder.isSubmitted}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/order_id(viewModel.submittedOrder.orderId)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/order_date"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Order ID: 436482"
            tools:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/order_amount"
            style="@style/GoldText"
            orderAmount="@{viewModel.submittedOrder.totalPrice}"
            visibleIf="@{viewModel.submittedOrder.isSubmitted}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            app:layout_constraintEnd_toEndOf="@id/order_id"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Amount: $30,447"
            tools:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>