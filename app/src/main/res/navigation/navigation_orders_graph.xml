<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_orders_graph"
    app:startDestination="@id/fragment_order">

    <fragment
        android:id="@+id/fragment_order"
        android:name="com.microsoft.device.display.sampleheroapp.presentation.order.OrderFragment"
        android:label="OrderFragment"
        tools:layout="@layout/fragment_order">

        <action android:id="@+id/action_order_to_receipt"
            app:destination="@id/fragment_order_receipt"
            app:launchScreen="both"/>

    </fragment>

    <fragment
        android:id="@+id/fragment_order_receipt"
        android:name="com.microsoft.device.display.sampleheroapp.presentation.order.OrderReceiptFragment"
        android:label="OrderReceiptFragment"
        tools:layout="@layout/fragment_order"/>
</navigation>