<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_products_graph"
    app:startDestination="@id/fragment_product_host">

    <fragment
        android:id="@+id/fragment_product_host"
        android:name="com.microsoft.device.display.sampleheroapp.presentation.product.host.HostProductsFragment"
        android:label="HostProductsFragment"
        tools:layout="@layout/fragment_host_products">

        <action android:id="@+id/action_product_list_to_details"
            app:destination="@id/fragment_product_details"/>

    </fragment>

    <fragment
        android:id="@+id/fragment_product_details"
        android:name="com.microsoft.device.display.sampleheroapp.presentation.product.details.ProductDetailsFragment"
        android:label="ProductDetailsFragment"
        tools:layout="@layout/fragment_product_details">

        <action android:id="@+id/action_product_details_to_customize"
            app:destination="@id/fragment_product_customize"/>

    </fragment>

    <fragment
        android:id="@+id/fragment_product_customize"
        android:name="com.microsoft.device.display.sampleheroapp.presentation.product.customize.ProductCustomizeFragment"
        android:label="ProductCustomizeFragment"
        tools:layout="@layout/fragment_product_customize">

        <argument android:name="hideBottomNav"
            android:defaultValue="true" />

    </fragment>

</navigation>