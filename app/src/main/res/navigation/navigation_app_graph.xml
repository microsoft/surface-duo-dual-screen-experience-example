<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_app_graph.xml"
    app:startDestination="@id/fragment_list">

    <fragment
        android:id="@+id/fragment_list"
        android:name="com.microsoft.device.display.sampleheroapp.presentation.product.ListFragment"
        android:label="ListFragment"
        tools:layout="@layout/fragment_list">

        <action android:id="@+id/action_product_list_to_detail"
            app:destination="@id/fragment_detail" />

    </fragment>

    <fragment
        android:id="@+id/fragment_detail"
        android:name="com.microsoft.device.display.sampleheroapp.presentation.product.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail">

        <action android:id="@+id/action_product_detail_to_list"
            app:destination="@id/fragment_list" />

    </fragment>

</navigation>